<div class="content">
  <div class="container">
    <%= form_with(model: @book, local: true) do |form| %>
      <h3>
        レビュー
      </h3>
      <%= form.text_field :name, placeholder: "Nickname" %>
      <%= form.file_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "text" , rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>